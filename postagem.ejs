<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Alice's Blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-secondary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Alice's Blog</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mynavbar">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                </ul>
                <form class="d-flex">
                    <input class="form-control me-2" type="text" placeholder="Search">
                    <button class="btn btn-outline-dark" type="button">Procurar</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-bs-toggle="tab" href="#post">Post</a>
            </li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
            <div class="tab-pane container active" id="home">
                <form action="/submit_post" method="post">
                    <label for="content" class="form-label">Conteúdo:</label>
                    <textarea id="content" name="mensagens" rows="8" class="form-control" required></textarea>
                    <button class="btn btn-outline-secondary mt-2" type="submit">Publicar</button>
                </form>
            </div>
        </div>

        <h2 class="mt-4">Posts</h2>
        <ul class="list-group">
            <% Postagens.forEach(postagem => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <strong><%= postagem.mensagens %></strong>
                    <a href="#" onclick="deletePostagem(<%= postagem.id %>)" class="delete-post">Excluir</a>
                </li>
            <% }); %>
        </ul>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function deletePostagem(id) {
            if (confirm("Tem certeza que deseja excluir esta postagem?")) {
                fetch(`/deletePostagens/${id}`, { method: 'GET' })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Erro ao excluir a postagem');
                        }
                        // Atualizar a página após a exclusão
                        location.reload();
                    })
                    .catch(error => {
                        console.error(error.message);
                        alert('Ocorreu um erro ao excluir a postagem');
                    });
            }
        }
    </script>
</body>
</html>
